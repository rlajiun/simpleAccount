<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_day"
    android:background="@drawable/sel_grid_day_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_day"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14.3sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_day"
        android:layout_alignLeft="@+id/txt_day"
        android:layout_alignStart="@+id/txt_day">
        <com.unvin.simpleaccount.utils.AutoResizeTextView
            android:id="@+id/txt_total"
            android:textSize="12sp"
            android:textColor="@color/colorSubPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:text="10,000,000" />
        <com.unvin.simpleaccount.utils.AutoResizeTextView
            android:id="@+id/txt_income"
            android:textSize="11.3sp"
            android:maxLines="1"
            android:textColor="@color/income"
            android:layout_below="@+id/txt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="30,000" />
        <com.unvin.simpleaccount.utils.AutoResizeTextView
            android:id="@+id/txt_consume"
            android:textSize="11.3sp"
            android:maxLines="1"
            android:textColor="@color/consume"
            android:layout_below="@+id/txt_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1,000,000" />
    </RelativeLayout>
</RelativeLayout>